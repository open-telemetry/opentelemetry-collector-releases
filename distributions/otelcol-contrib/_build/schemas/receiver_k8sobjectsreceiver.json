{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "auth_type": {
      "description": "How to authenticate to the K8s API server.  This can be one of `none` (for no auth), `serviceAccount` (to use the standard service account token provided to the agent pod), or `kubeConfig` to use credentials from `~/.kube/config`.",
      "type": "string"
    },
    "context": {
      "description": "When using auth_type `kubeConfig`, override the current context.",
      "type": "string"
    },
    "error_mode": {
      "type": "string"
    },
    "include_initial_state": {
      "type": "boolean"
    },
    "k8s_leader_elector": {
      "type": "object"
    },
    "objects": {
      "items": {
        "properties": {
          "exclude_watch_type": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "field_selector": {
            "type": "string"
          },
          "group": {
            "type": "string"
          },
          "interval": {
            "description": "Duration string (e.g., '1s', '5m', '1h')",
            "pattern": "^[0-9]+(ns|us|Âµs|ms|s|m|h)$",
            "type": "string"
          },
          "label_selector": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "namespaces": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "resource_version": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array"
    }
  },
  "type": "object"
}