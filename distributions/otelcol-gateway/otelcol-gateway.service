[Unit]
Description=OpenTelemetry Collector Gateway
After=network.target

[Service]
EnvironmentFile=/etc/otelcol-gateway/otelcol-gateway.conf
ExecStart=/usr/bin/otelcol-gateway $OTELCOL_OPTIONS
KillMode=mixed
Restart=on-failure
Type=simple
User=otelcol-gateway
Group=otelcol-gateway

[Install]
WantedBy=multi-user.target
