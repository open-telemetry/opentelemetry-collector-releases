{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|\\/).github\\/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "goreleaser\\/goreleaser-action@[\\S\\s]+version: (?<currentValue>.*?)$"
      ],
      "depNameTemplate": "github.com/goreleaser/goreleaser",
      "datasourceTemplate": "github-releases"
    }
  ]
}
